C++

class Solution {
public:
    bool isHappy(int n) {
        set<int> x;
        while(n>1)
        {
            x.insert(n);
        
        int ans=0;
            while(n>0)  
            {
                //int num=n%10; //9 -> 1
                ans +=(n%10)*(n%10); //81 ->82
                n/=10; //1
            }
            n=ans;
            if(x.find(n)!=x.end())
            {
                return false;
            }
        }
        return (n==1);
        
    }
};
